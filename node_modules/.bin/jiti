#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/home/nxtwave/nxtwatch/node_modules/.pnpm/jiti@1.21.0/node_modules/jiti/bin/jiti.js/node_modules:/home/nxtwave/nxtwatch/node_modules/.pnpm/jiti@1.21.0/node_modules/jiti/bin/node_modules:/home/nxtwave/nxtwatch/node_modules/.pnpm/jiti@1.21.0/node_modules/jiti/node_modules:/home/nxtwave/nxtwatch/node_modules/.pnpm/jiti@1.21.0/node_modules:/home/nxtwave/nxtwatch/node_modules/.pnpm/node_modules:/home/nxtwave/nxtwatch/node_modules:/home/nxtwave/node_modules:/home/node_modules:/node_modules:/home/nxtwave/nxtwatch/node_modules/jiti/bin/jiti.js/node_modules:/home/nxtwave/nxtwatch/node_modules/jiti/bin/node_modules:/home/nxtwave/nxtwatch/node_modules/jiti/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../jiti/bin/jiti.js" "$@"
else 
  exec node  "$basedir/../jiti/bin/jiti.js" "$@"
fi
