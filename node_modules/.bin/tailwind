#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/home/nxtwave/nxtwatch/node_modules/.pnpm/tailwindcss@3.4.1/node_modules/tailwindcss/lib/cli.js/node_modules:/home/nxtwave/nxtwatch/node_modules/.pnpm/tailwindcss@3.4.1/node_modules/tailwindcss/lib/node_modules:/home/nxtwave/nxtwatch/node_modules/.pnpm/tailwindcss@3.4.1/node_modules/tailwindcss/node_modules:/home/nxtwave/nxtwatch/node_modules/.pnpm/tailwindcss@3.4.1/node_modules:/home/nxtwave/nxtwatch/node_modules/.pnpm/node_modules:/home/nxtwave/nxtwatch/node_modules:/home/nxtwave/node_modules:/home/node_modules:/node_modules:/home/nxtwave/nxtwatch/node_modules/tailwindcss/lib/cli.js/node_modules:/home/nxtwave/nxtwatch/node_modules/tailwindcss/lib/node_modules:/home/nxtwave/nxtwatch/node_modules/tailwindcss/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../tailwindcss/lib/cli.js" "$@"
else 
  exec node  "$basedir/../tailwindcss/lib/cli.js" "$@"
fi
